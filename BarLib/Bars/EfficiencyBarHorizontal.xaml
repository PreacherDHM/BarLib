<UserControl x:Class="BarLib.Bars.EfficiencyBarHorizontal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BarLib.Bars"
             mc:Ignorable="d" 
             MinHeight="50" Width="auto"
             Loaded="UserControl_Loaded">
        <Grid SizeChanged="Grid_SizeChanged" Name="base">
        <Grid Background="#00000000" Opacity="0.3"/>
        <Border x:Name="border" Background="{Binding Color}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="{Binding BarWidth}" Height="{Binding BarHeight}"/>
        <Line X1="{Binding TargetLinePos}" Y1="{Binding Y1}"
              X2="{Binding TargetLinePos}" Y2="{Binding Y2}"
              Stroke="Red" StrokeThickness="3"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding LineValue}" FontSize="15" Foreground="{Binding Forground}">
        </TextBlock>
    </Grid>
</UserControl>
